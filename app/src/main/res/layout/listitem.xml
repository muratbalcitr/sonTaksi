<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llDurak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDurakAdi"
            android:layout_width="386dp"
            android:layout_height="match_parent"
            android:text="Taksi durak adı"
            android:textAllCaps="false"
            android:textColor="@color/taksiListYazi"
            android:textSize="23sp"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/tvNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="taksi numarası"
            android:textAllCaps="false"
            android:textColor="@color/authui_colorAccent"
            android:textSize="23sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btnAra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="@drawable/call"
            android:drawableLeft="@drawable/ic_call"
            android:paddingLeft="15dp"
            android:text="ARA"
            android:textColor="@color/white"
            android:onClick="btnAra" />
    </LinearLayout>

</LinearLayout>